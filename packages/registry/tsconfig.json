{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "ES6",
      "DOM"
    ],
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "baseUrl": "src",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/hooks/*"
  ]
}